<?xml version="1.0" encoding="UTF-8"?>
<Dashboard xmlns="http://soap.sforce.com/2006/04/metadata">
    <backgroundEndColor>#FFFFFF</backgroundEndColor>
    <backgroundFadeDirection>Diagonal</backgroundFadeDirection>
    <backgroundStartColor>#FFFFFF</backgroundStartColor>
    <dashboardChartTheme>light</dashboardChartTheme>
    <dashboardColorPalette>default</dashboardColorPalette>
    <dashboardFilters/>
    <dashboardGridLayout>
        <!-- Row 0: Pipeline bar chart (left) + Budget Health table (right) -->
        <dashboardGridComponents>
            <colSpan>6</colSpan>
            <columnIndex>0</columnIndex>
            <rowIndex>0</rowIndex>
            <rowSpan>4</rowSpan>
            <dashboardComponent>
                <chartAxisRange>Auto</chartAxisRange>
                <componentType>Column</componentType>
                <dashboardTableColumn>
                    <column>RowCount</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <groupingColumn>StageNamePk__c</groupingColumn>
                <header>Delivery Pipeline</header>
                <reportName>DeliveryHub/Ticket_Pipeline</reportName>
                <title>Tickets by Stage</title>
            </dashboardComponent>
        </dashboardGridComponents>
        <dashboardGridComponents>
            <colSpan>6</colSpan>
            <columnIndex>6</columnIndex>
            <rowIndex>0</rowIndex>
            <rowSpan>4</rowSpan>
            <dashboardComponent>
                <componentType>Table</componentType>
                <dashboardTableColumn>
                    <column>NAME</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>StageNamePk__c</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>EstimatedHoursNumber__c</column>
                    <showTotal>true</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>TotalLoggedHoursNumber__c</column>
                    <showTotal>true</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>HoursVarianceNumber__c</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <header>Budget Watch</header>
                <maxValuesDisplayed>10</maxValuesDisplayed>
                <reportName>DeliveryHub/Budget_Health</reportName>
                <title>Active Ticket Budget Health</title>
            </dashboardComponent>
        </dashboardGridComponents>
        <!-- Row 4: Tickets by Client donut (left) + High Priority table (right) -->
        <dashboardGridComponents>
            <colSpan>5</colSpan>
            <columnIndex>0</columnIndex>
            <rowIndex>4</rowIndex>
            <rowSpan>4</rowSpan>
            <dashboardComponent>
                <chartAxisRange>Auto</chartAxisRange>
                <componentType>Donut</componentType>
                <dashboardTableColumn>
                    <column>RowCount</column>
                    <showTotal>true</showTotal>
                </dashboardTableColumn>
                <groupingColumn>ClientNetworkEntityId__c</groupingColumn>
                <header>Work Distribution</header>
                <maxValuesDisplayed>8</maxValuesDisplayed>
                <reportName>DeliveryHub/Tickets_by_Client</reportName>
                <title>Tickets by Client</title>
            </dashboardComponent>
        </dashboardGridComponents>
        <dashboardGridComponents>
            <colSpan>7</colSpan>
            <columnIndex>5</columnIndex>
            <rowIndex>4</rowIndex>
            <rowSpan>4</rowSpan>
            <dashboardComponent>
                <componentType>Table</componentType>
                <dashboardTableColumn>
                    <column>NAME</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>StageNamePk__c</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>ClientNetworkEntityId__c</column>
                    <showTotal>false</showTotal>
                </dashboardTableColumn>
                <dashboardTableColumn>
                    <column>EstimatedHoursNumber__c</column>
                    <showTotal>true</showTotal>
                </dashboardTableColumn>
                <header>Needs Attention</header>
                <maxValuesDisplayed>10</maxValuesDisplayed>
                <reportName>DeliveryHub/High_Priority_Tickets</reportName>
                <title>High Priority Tickets</title>
            </dashboardComponent>
        </dashboardGridComponents>
    </dashboardGridLayout>
    <dashboardType>LoggedInUser</dashboardType>
    <description>Admin command center showing pipeline flow, budget health, client workload distribution, and high priority items at a glance.</description>
    <isGridLayout>true</isGridLayout>
    <textColor>#000000</textColor>
    <title>Delivery Hub Command Center</title>
    <titleColor>#1A2D4A</titleColor>
    <titleSize>12</titleSize>
</Dashboard>
