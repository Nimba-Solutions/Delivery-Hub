<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Delivery Status Page</masterLabel>
    <description>Public-facing status page showing aggregate project health. Designed for Experience Cloud or embedding via Salesforce Sites.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default,lightning__AppPage,lightning__HomePage">
            <property name="entityToken" type="String" label="Entity Token" description="The network entity name or token to display status for." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
